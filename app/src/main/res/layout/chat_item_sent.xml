<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llaa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:gravity="right"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/chat_bubble_green"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/mar_15dp"
                android:layout_marginRight="@dimen/mar_45dp">

                <TextView
                    android:id="@+id/lbl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/pad_8dp"
                    android:textSize="@dimen/txt_13sp"
                    android:layout_marginRight="@dimen/mar_40dp" />

                <TextView
                    android:id="@+id/lbl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/pad_8dp"
                    android:textSize="@dimen/txt_14sp"
                    android:maxLines="4"
                    android:layout_marginRight="@dimen/mar_40dp"
                    android:maxWidth="200dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/profile_thumbnail"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:layout_gravity="right|top"/>

        </FrameLayout>

        <TextView
            android:id="@+id/lbl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_color_gray"
            android:textSize="@dimen/txt_14sp"
            android:layout_marginRight="@dimen/mar_15dp"
            android:layout_gravity="right"/>

    </LinearLayout>
</LinearLayout>
