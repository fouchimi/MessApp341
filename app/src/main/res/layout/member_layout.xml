<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/profile_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/pad_8dp"
        android:paddingBottom="@dimen/pad_8dp"
        android:minWidth="@dimen/min_thumbnail_height"
        android:maxWidth="@dimen/min_thumbnail_height"
        android:minHeight="@dimen/min_thumbnail_height"
        android:maxHeight="@dimen/min_thumbnail_height"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/username"
                android:paddingTop="@dimen/pad_10dp"
                android:paddingLeft="@dimen/pad_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/boldBlack"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/pad_8dp"
                android:layout_gravity="left"
                android:textSize="13sp"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/member_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_20dp"
            android:paddingTop="@dimen/pad_8dp"
            android:paddingLeft="@dimen/pad_8dp"
            android:gravity="right|center" />
    </LinearLayout>
</LinearLayout>


